<Window x:Class="Amigo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Amigo"
        DataContext="{Binding Path=Main, Source={StaticResource Locator}}"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Window.Resources>
        <Style TargetType="{x:Type StackPanel}" x:Key="splinha">
            <Setter Property="Margin" Value="4">
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <ComboBox x:Name="Categoria" ToolTip="Escolha o item categoria" Width="250"
                      ItemsSource="{Binding ListaCombo}"
                      SelectedItem="{Binding ItemSelecionado}"
                      DisplayMemberPath="Value"
                      Margin="10,0"/>
            <ListBox Width="300" Height="400" ItemsSource="{Binding ListaItens}" SelectedItem="{Binding ItemSelecionadoLista}">
                
            </ListBox>
            <StackPanel HorizontalAlignment="Center"  Orientation="Horizontal">
                <Button Command="{Binding AbrirItem}">Abrir</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

