<Window x:Class="Amigo.MensalidadesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Amigo"
        mc:Ignorable="d"
        Icon="Imagens/LogoAmigo64.png"
         DataContext="{Binding Path=MensalidadesViewModel, Source={StaticResource Locator}}"
        Title="MensalidadesWindow" Height="400" Width="400">
    <Grid>
        <ListView>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <WrapPanel>
                        <Grid HorizontalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Border>
                                <TextBlock Margin="8,0" Grid.Column="0" HorizontalAlignment="Center">Mês</TextBlock>
                            </Border>
                            <TextBlock Margin="8,0" Grid.Column="1" Width="auto" HorizontalAlignment="Center">
                                <RadioButton>Pago</RadioButton>
                            </TextBlock>
                            <TextBlock Margin="8,0" Grid.Column="2"  Width="auto" HorizontalAlignment="Center">
                                <RadioButton>Em aberto</RadioButton>
                            </TextBlock>

                        </Grid>
                    </WrapPanel>
                </DataTemplate>
            </ListView.ItemTemplate>


        </ListView>

    </Grid>
</Window>
